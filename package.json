{
  "name": "@dojo/themes",
  "version": "3.0.2-pre",
  "description": "Dojo Themes",
  "homepage": "https://dojo.io",
  "bugs": {
    "url": "https://github.com/dojo/themes/issues"
  },
  "license": "BSD-3-Clause",
  "main": "main.js",
  "engines": {
    "npm": ">=3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dojo/themes.git"
  },
  "scripts": {
    "build": "dojo build theme --name dojo",
    "package:static": "cpx \"{README.md,package.json}\" dist/release",
    "package:dist": "cpx \"dist/src/**/*\" dist/release",
    "package": "run-s package:**",
    "dojo-release": "dojo-release",
    "release": "run-s build package \"dojo-release -- {@}\" --",
    "watch": "tcm dojo -p *.m.css -w"
  },
  "devDependencies": {
    "@dojo/cli-build-theme": "./deps/dojo-cli-build-theme-3.0.0.tgz",
    "@dojo/scripts": "~3.0.1",
    "cpx": "1.5.0",
    "npm-run-all": "4.1.3",
    "rimraf": "2.6.2",
    "slash": "1.0.0",
    "typed-css-modules": "0.3.1",
    "typescript": "2.6.2"
  }
}
